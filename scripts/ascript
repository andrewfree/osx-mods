LEFT

osascript -e 'tell application "System Events"' -e "set _app to name of item 1 of (every process whose frontmost is true)"  -e "tell process _app" -e 'set hasRun to false' -e 'tell window 1' -e 'set {l, h} to (get size)' -e 'set {x, y} to (get position)' -e 'if (x equals 0) and (l equals 1920) then' -e 'set size to {960, 1080}' -e 'set position to {0, y}' -e 'set hasRun to true' -e 'else if (x greater than or equal to 1920) and (l equals 1920) then' -e 'set size to {960,1080}' -e 'set position to {1920,0}' -e 'set hasRun to true' -e 'end if' -e 'if (x is less than 1920) and (x is greater than 0) and (hasRun equals false) then' -e 'set size to {960, 1080}' -e 'set position to {0, 0}' -e 'set size to {960, 1080}' -e 'else if (x equals 0) and (hasRun equals false)' -e 'set position to {2880, 0}' -e 'else if (x is greater than 1920) and (hasRun equals false) then' -e 'set size to {960, 1080}' -e 'set position to {1920, 22}' -e 'else if (x equals 1920) and (hasRun equals false)' -e 'set position to {960,0}' -e 'set size to {960, 1080}' -e 'else' -e 'set blah to "str"' -e 'end if' -e 'end tell' -e 'end tell' -e 'end tell'


RIGHT 

osascript -e 'tell application "System Events"' -e "set _app to name of item 1 of (every process whose frontmost is true)"  -e "tell process _app" -e 'set hasRun to false' -e 'tell window 1' -e 'set {l, h} to (get size)' -e 'set {x, y} to (get position)' -e 'if (x equals 0) and (l equals 1920) then' -e 'set size to {960, 1080}' -e 'set position to {960, y}' -e 'set hasRun to true' -e 'else if (x greater than or equal to 1920) and (l equals 1920) then' -e 'set size to {960,1080}' -e 'set position to {2880,0}' -e 'set hasRun to true' -e 'end if' -e 'if (x is less than 1920) and (x is greater than or equal to 0) and (hasRun equals false) and (x does not equal 960) then' -e 'set size to {960, 1080}' -e 'set position to {960, 0}' -e 'else if (x is less than 1920) and (x is greater than or equal to 0) and (hasRun equals false) and (x equals 960) then' -e 'set size to {960, 1080}' -e 'set position to {1920, 0}' -e 'else if (x equals 960) and (hasRun equals false)' -e 'set position to {1920, 0}' -e 'else if (x is greater than 1920) and (hasRun equals false) and (x does not equal 2880) then' -e 'set size to {960, 1080}' -e 'set position to {2880, 0}' -e 'else if (x equals 1920) and (hasRun equals false)' -e 'set position to {2880,0}' -e 'set size to {960, 1080}' -e 'else if (x equals 2880) and (l equals 960) then' -e 'set position to {0,0}' -e 'else' -e 'set blah to "str"' -e 'end if' -e 'end tell' -e 'end tell' -e 'end tell'